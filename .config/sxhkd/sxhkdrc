# Change keyboard layout to English, Russian, Latam Spanish, or German.
super + c ; {e,r,s,g}
  { setxkbmap us \
  , setxkbmap ru \
  , setxkbmap latam \
  , setxkbmap -layout de -variant e1 \
  }

